# Fastlane configuration for Ausmo AAC App

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    build_app(
      scheme: "Ausmo",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.ausmo.aac" => "Ausmo App Store Profile"
        }
      }
    )

    upload_to_testflight(
      api_key_path: "fastlane/api_key.json",
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and upload to App Store"
  lane :release do
    build_app(
      scheme: "Ausmo",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.ausmo.aac" => "Ausmo App Store Profile"
        }
      }
    )

    upload_to_app_store(
      api_key_path: "fastlane/api_key.json",
      submit_for_review: true,
      automatic_release: true,
      skip_metadata: false,
      skip_screenshots: false
    )
  end

  desc "Build app for testing"
  lane :build do
    build_app(
      scheme: "Ausmo",
      configuration: "Debug",
      export_method: "development",
      output_directory: "build"
    )
  end

  desc "Run tests"
  lane :test do
    run_tests(
      scheme: "Ausmo",
      devices: ["iPhone 15"],
      clean: true
    )
  end

  desc "Generate screenshots"
  lane :screenshots do
    capture_screenshots(
      scheme: "Ausmo",
      devices: ["iPhone 15", "iPhone 15 Pro Max"]
    )
  end

  desc "Bump version and build"
  lane :bump_and_build do
    increment_version_number
    increment_build_number

    build
  end

  desc "Validate app metadata"
  lane :validate_metadata do
    validate_app_store_metadata
  end

  desc "Download latest provisioning profiles"
  lane :profiles do
    match(
      type: "appstore",
      app_identifier: "com.ausmo.aac",
      git_url: "https://github.com/your-org/certificates.git",
      readonly: true
    )
  end

  desc "Update certificates and profiles"
  lane :certificates do
    match(
      type: "appstore",
      app_identifier: "com.ausmo.aac",
      git_url: "https://github.com/your-org/certificates.git",
      force: true
    )
  end

  desc "Clean build artifacts"
  lane :clean do
    clear_derived_data
    clean_build_artifacts
  end
end
