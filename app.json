{
  "expo": {
    "name": "Ausmo",
    "slug": "ausmo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ausmo.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record audio messages for communication.",
        "NSCameraUsageDescription": "This app needs access to camera to take photos for custom symbols and user profiles.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for symbols and backgrounds.",
        "NSMediaLibraryUsageDescription": "This app needs access to media library to manage audio files.",
        "NSDocumentsFolderUsageDescription": "This app needs access to documents folder to save and manage communication books."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2196F3"
      },
      "package": "com.ausmo.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sqlite",
      "expo-av",
      "expo-camera",
      "expo-image-picker",
      "expo-file-system"
    ],
    "extra": {
      "eas": {
        "projectId": "ausmo-project-id"
      }
    },
    "env": {
      "EXPO_PUBLIC_SUPABASE_URL": "https://hviuzozqptsdshxzlpdf.supabase.co",
